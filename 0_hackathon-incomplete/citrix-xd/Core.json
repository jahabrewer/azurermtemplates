{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "West US"
      ]
    },
    "newStorageAccountName": {
      "type": "string"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS"
      ]
    },
    "vmStorageAccountContainerName": {
      "type": "string",
      "defaultValue": "vhds"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16"
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "Subnet-1"
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24"
    },
    "nicNamePrefix": {
      "type": "string"
    },
    "publicIPAddressType": {
      "type": "string",
      "defaultValue": "Dynamic",
      "allowedValues": [
        "Dynamic",
        "Static"
      ]
    },
    "dcVmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4"
      ]
    },
    "dcVmName": {
      "type": "string"
    },
    "dcVmSourceImageName": {
      "type": "string",
      "defaultValue": "a699494373c04fc0bc8f2bb1389d6106__Windows-Server-2012-R2-201503.01-en.us-127GB.vhd"
    },
    "dcPublicIPAddressName": {
      "type": "string",
      "defaultValue": "publicIP-dc"
    },
    "sqlVmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6"
      ]
    },
    "sqlVmName": {
      "type": "string"
    },
    "sqlVmSourceImageName": {
      "type": "string",
      "defaultValue": "fb83b3509582419d99629ce476bcb5c8__SQL-Server-2012-SP2-11.0.5569.0-Std-ENU-Win2012-cy15su02"
    },
    "sqlPublicIPAddressName": {
      "type": "string",
      "defaultValue": "publicIP-sql"
    },
    "sqlDnsName": {
      "type": "string"
    },
    "ddcVmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "allowedValues": [
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6"
      ]
    },
    "ddcVmName": {
      "type": "string"
    },
    "ddcVmSourceImageName": {
      "type": "string",
      "defaultValue": "a699494373c04fc0bc8f2bb1389d6106__Windows-Server-2012-R2-201502.01-en.us-127GB.vhd"
    },
    "ddcPublicIPAddressName": {
      "type": "string",
      "defaultValue": "publicIP-ddc"
    },
    "ddcDnsName": {
      "type": "string"
    },
    "xdIsoSourcePath": {
      "type": "string"
    },
    "sourcePathCredKey": {
      "type": "string"
    },
    "xdDscModulesUrl": {
      "type": "string"
    },
    "sourcePathCredUsername": {
      "type": "string"
    },
    "xdImagePath": {
      "type": "string"
    },
    "xdDscConfigurationFunction": {
      "type": "string"
    },
    "adAssetLocation": {
      "type": "string",
      "metadata": {
        "Description": "The location of resources such as templates and DSC modules upon which the script is dependent"
      },
      "defaultValue": "https://raw.githubusercontent.com/azurermtemplates/azurermtemplates/master/activedirectorynewdomain"
    },
    "addnsName": {
      "type": "string"
    }
  },
  "variables": {
    "sqlSourceImageName": "[concat('/',subscription().subscriptionId,'/services/images/',parameters('sqlVmSourceImageName'))]",
    "ddcSourceImageName": "[concat('/',subscription().subscriptionId,'/services/images/',parameters('ddcVmSourceImageName'))]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/',parameters('subnet1Name'))]",
    "dcNicName": "[concat(parameters('nicNamePrefix'),'-dc')]",
    "sqlNicName": "[concat(parameters('nicNamePrefix'),'-sql')]",
    "ddcNicName": "[concat(parameters('nicNamePrefix'),'-ddc')]",
    "dcTemplateUri": "[concat(parameters('adAssetLocation'),'/azuredeploy.json')]"
  },
  "resources": [
    {
      "name": "dc",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('dcTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "newStorageAccountName": {
            "value": "[parameters('newStorageAccountName')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          },
          "deploymentLocation": {
            "value": "[parameters('location')]"
          },
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "virtualNetworkAddressRange": {
            "value": "[parameters('addressPrefix')]"
          },
          "adSubnetName": {
            "value": "[parameters('subnet1Name')]"
          },
          "adSubnet": {
            "value": "[parameters('subnet1Prefix')]"
          },
          "adNicName": {
            "value": "[variables('dcNicName')]"
          },
          "addnsName": {
            "value": "[parameters('addnsName')]"
          },
          "publicIPAddressName": {
            "value": "[parameters('dcPublicIPAddressName')]"
          },
          "publicIPAddressType": {
            "value": "[parameters('publicIPAddressType')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "adVMName": {
            "value": "[parameters('dcVmName')]"
          },
          "adVMSize": {
            "value": "[parameters('dcVmSize')]"
          },
          "adImageName": {
            "value": "[parameters('dcVmSourceImageName')]"
          },
          "vmContainerName": {
            "value": "[parameters('vmStorageAccountContainerName')]"
          },
          "AssetLocation": {
            "value": "https://raw.githubusercontent.com/azurermtemplates/azurermtemplates/master/activedirectorynewdomain-ha-2-dc"
          }
        }
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('sqlPublicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('sqlDnsName')]"
        }
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('ddcPublicIPAddressName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[parameters('ddcDnsName')]"
        }
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('sqlNicName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('sqlPublicIPAddressName'))]",
        "Microsoft.Resources/deployments/dc"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('sqlPublicIPAddressName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('ddcNicName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('ddcPublicIPAddressName'))]",
        "Microsoft.Resources/deployments/dc"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('ddcPublicIPAddressName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('sqlVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.Resources/deployments/dc",
        "[concat('Microsoft.Network/networkInterfaces/', variables('sqlNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('sqlVmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('sqlVmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "sourceImage": {
            "id": "[variables('sqlSourceImageName')]"
          },
          "destinationVhdsContainer": "[concat('http://',parameters('newStorageAccountName'),'.blob.core.windows.net/',parameters('vmStorageAccountContainerName'),'/')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('sqlNicName'))]"
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('ddcVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.Resources/deployments/dc",
        "[concat('Microsoft.Network/networkInterfaces/', variables('ddcNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('ddcVmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('ddcVmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "sourceImage": {
            "id": "[variables('ddcSourceImageName')]"
          },
          "destinationVhdsContainer": "[concat('http://',parameters('newStorageAccountName'),'.blob.core.windows.net/',parameters('vmStorageAccountContainerName'),'/')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('ddcNicName'))]"
            }
          ]
        }
      }
    }
  ]
}